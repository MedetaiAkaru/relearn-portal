<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :short_name %>
    <%= f.input :format, as: :select, collection: Course::FORMATS %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
